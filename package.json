{
  "name": "swagger-ui-action",
  "version": "1.1.3",
  "private": true,
  "description": "Generate Swagger UI for API documentation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map src/main.ts",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Legion2/swagger-ui-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "swagger-ui",
    "openapi"
  ],
  "author": "Leon Kiefer",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.0",
    "@actions/http-client": "^1.0.11",
    "@actions/io": "^1.1.1",
    "@octokit/rest": "^18.12.0",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.14",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/parser": "^4.33.0",
    "@vercel/ncc": "^0.33.3",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^26.0.0",
    "jest": "^27.4.7",
    "jest-circus": "^27.4.6",
    "js-yaml": "^4.1.0",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  }
}
